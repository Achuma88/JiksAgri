@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body {
        background-image: url("/images/bc437060-cdac-11ef-94cb-5f844ceb9e30.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        background-attachment: fixed;
    }

    .admin-overlay {
        background-color: none;
        min-height: 100vh;
        padding-top: 90px;
    }

    .navbar-admin {
        background-color: #0f5132;
    }

        .navbar-admin .nav-link,
        .navbar-admin .navbar-brand {
            color: white;
            font-weight: 500;
        }

            .navbar-admin .nav-link.active {
                text-decoration: underline;
            }

            .navbar-admin .p{ font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-size:48px;}
</style>

<!-- 🔝 ADMIN NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-admin fixed-top shadow">
    <p>JiksAgriFarm</p>
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" asp-action="Index">
            Home
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-action="DisplayAll">Farmers</a>
                </li>
            </ul>

            <!-- ADMIN PROFILE DROPDOWN -->
            <ul class="navbar-nav ms-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                        👤 Admin
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" asp-action="Profile">My Profile</a>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <a class="dropdown-item text-danger" asp-action="Logout">
                                Sign Out
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- 🧾 PAGE CONTENT -->
<div class="admin-overlay">
    <div class="container">

        <!-- Alerts -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <h4 class="fw-bold mt-4 mb-3">Registered Farmers</h4>
        <div class="row mb-3">
            <div class="col-md-6">
                <input type="text"
                       id="farmerSearch"
                       class="form-control"
                       placeholder="Search farmers by name, email, phone or location..." />
            </div>
        </div>

        <!-- FARMERS GRID -->
        <div class="row">
            @foreach (var farmer in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold">@farmer.FarmerName</h5>

                            <p class="mb-1"><strong>Phone:</strong> @farmer.FarmerPhone</p>
                            <p class="mb-1"><strong>Email:</strong> @farmer.FarmerEmail</p>
                            <p class="mb-2"><strong>Location:</strong> @farmer.FarmerLocation</p>

                            <span class="badge
                                    @(farmer.FarmerStatus == "Active" ? "bg-success" :
                                                                    farmer.FarmerStatus == "Pending" ? "bg-warning text-dark" : "bg-danger")">
                            @farmer.FarmerStatus
                        </span>
                    </div>

                        <div class="card-footer bg-transparent d-flex justify-content-between">
                            <a asp-action="Details"
                               asp-route-id="@farmer.FarmerID"
                               class="btn btn-sm btn-outline-primary">
                                View
                            </a>

                        @if (!farmer.IsVerified)
                            {
                                <a asp-action="ApproveFarmer"
                                   asp-route-id="@farmer.FarmerID"
                                   class="btn btn-sm btn-outline-success">
                                    Verify
                                </a>
                            }
                            else
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
<script>
    document.getElementById("farmerSearch").addEventListener("keyup", function () {
        let value = this.value.toLowerCase();
        let cards = document.querySelectorAll(".farmer-card");

        cards.forEach(card => {
            let text = card.innerText.toLowerCase();
            card.style.display = text.includes(value) ? "" : "none";
        });
    });
</script>

