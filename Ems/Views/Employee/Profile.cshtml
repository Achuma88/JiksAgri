@model Ems.Data.Models.Domain.Employee

@{
    ViewData["Title"] = "Staff";
}

<!-- Font Awesome CDN (if not already included) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        background-image: url("/images/backgr.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-container {
        max-width: 600px;
        margin: 50px auto;
        background-color: rgba(0, 0, 0, 0.9);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .profile-header {
        text-align: center;
        margin-bottom: 30px;
    }

        .profile-header h2 {
            margin: 0;
            color: white;
        }

    .profile-detail {
        margin: 15px 0;
        font-size: 1.1em;
        display: flex;
        align-items: center;
    }

    .profile-icon {
        color: #007bff;
        margin-right: 10px;
        width: 25px;
        text-align: center;
    }

    .profile-label {
        font-weight: bold;
        color: white;
        margin-right: 5px;
        min-width: 100px;
    }

    .profile-value {
        color: white;
    }

    .status-active {
        color: #32CD32; /* Light Green */
        font-weight: bold;
    }

    .status-inactive {
        color: #dc3545; /* Red */
        font-weight: bold;
    }

    .nav-link {
        color: midnightblue;
        display: inline-block;
        transition: transform 0.2s ease, color 0.2s ease, font-weight 0.2s ease;
    }

        .nav-link:hover {
            transform: scale(1.1);
            color: antiquewhite;
            font-weight: bold;
            text-decoration: none;
        }

        .nav-link i {
            color: inherit;
            font-size: 1em;
        }

</style>

<body>

    <!-- Font Awesome CDN (if not already included) -->


    <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/Staff/Index">
                <i class="fas fa-arrow-left me-1"></i> Back
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Employee/UpdateStaff">
                <i class="fas fa-pen me-1"></i> Edit User Details
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Employee/ResetPassword">
                <i class="fas fa-key me-1"></i> Reset Password
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Login/Index">
                <i class="fas fa-sign-out-alt me-1"></i> Sign Out
            </a>
        </li>
    </ul>



    <!-- Profile Info -->
    <div class="profile-container">
        <div class="profile-header">
            <h2><i class="fas fa-id-badge"></i>Profile for  @Model.EmpName @Model.EmpSurname</h2>
        </div>

        <div class="profile-detail">
            <i class="fas fa-user profile-icon"></i>
            <span class="profile-label">Name:</span>
            <span class="profile-value">@Model.EmpName</span>
        </div>
        <div class="profile-detail">
            <i class="fas fa-user profile-icon"></i>
            <span class="profile-label">Surname:</span>
            <span class="profile-value">@Model.EmpSurname</span>
        </div>
        <div class="profile-detail">
            <i class="fas fa-envelope profile-icon"></i>
            <span class="profile-label">Email:</span>
            <span class="profile-value">@Model.EmpEmail</span>
        </div>

        <div class="profile-detail">
            <i class="fas fa-phone profile-icon"></i>
            <span class="profile-label">Phone:</span>
            <span class="profile-value">@Model.EmpPhone</span>
        </div>

        <div class="profile-detail">
            <i class="fas fa-user-tag profile-icon"></i>
            <span class="profile-label">Role:</span>
            <span class="profile-value">@Model.EmpRole</span>
        </div>

        <div class="profile-detail">
            <i class="fas fa-check-circle profile-icon"></i>
            <span class="profile-label">Status:</span>
            <span class="profile-value @(Model.EmpStatus == "Active" ? "status-active" : "status-inactive")">
                @Model.EmpStatus
            </span>
        </div>
    </div>
    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content border-success">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="successModalLabel">Success</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @ViewBag.SuccessMessage
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="errorModalLabel">Error</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @ViewBag.ErrorMessage
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var successMessage = '@ViewBag.SuccessMessage';
        var errorMessage = '@ViewBag.ErrorMessage';

        if (successMessage && successMessage.trim() !== '') {
            var successModal = new bootstrap.Modal(document.getElementById('successModal'));
            successModal.show();

            // Auto-close after 3 seconds and redirect to /Employee/Dashboard (change URL if needed)
            setTimeout(() => {
                successModal.hide();
                window.location.href = '/Employee/Profile';  // Change this URL to your desired redirect page
            }, 3000);
        }

        if (errorMessage && errorMessage.trim() !== '') {
            var errorModal = new bootstrap.Modal(document.getElementById('errorModal'));
            errorModal.show();
        }
    });
</script>
