@model Ems.Data.Models.Domain.Employee

@{
    ViewData["Title"] = "Staff";
}
@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}
<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        background-image: url("/images/10f.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        background-attachment: fixed;
    }

    header {
        background-color: rgba(0, 0, 0, 0.7);
        color: white;
        padding: 10px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 1000;
        width:100%;
    }

    .header-left h2 {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .header-right a {
        color: white;
        margin-left: 0px;
        text-decoration: none;
        font-size: 1em;
        transition: color 0.3s ease;
    }

        .header-right a:hover {
            color: #ffc107;
        }

    .header-right i {
        margin-right: 0px;
    }

    #clock {
        font-weight: bold;
    }

    .text-center {
        color:midnightblue;
        padding-top: 100px;
        font-weight:bold;
    }

    .features {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin: 50px 0;
        color: beige;
        background-color: darkcyan;
        border-radius: 25px;
    }

    .feature {
        text-align: center;
        max-width: 200px;
        padding: 30px;
    }

    .health-motivation {
        background-color:darkcyan;
        padding: 50px 20px;
        color: #fff;
        text-align: center;
        border-radius: 12px;
        margin: 60px auto;
        max-width: 800px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    .health-content h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .health-content p {
        font-size: 1.2em;
        margin-bottom: 25px;
    }

    .health-tips {
        list-style: none;
        padding: 0;
        margin: 0 auto 30px auto;
        max-width: 500px;
        text-align: left;
    }

        .health-tips li {
            font-size: 1.1em;
            margin: 10px 0;
            display: flex;
            align-items: center;
        }

        .health-tips i {
            color: #fff700;
            margin-right: 12px;
            font-size: 1.3em;
        }

    blockquote {
        font-style: italic;
        font-size: 1.1em;
        color: #fffde7;
        margin-top: 20px;
    }

    .nav-link {
        color: midnightblue;
        display: inline-block;
        transition: transform 0.2s ease, color 0.2s ease, font-weight 0.2s ease;
        margin-top:35px;
        font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode';
    }

        .nav-link:hover {
            transform: scale(1.1);
            color:snow;
            font-weight: bold;
            text-decoration: none;
        }

        .nav-link i {
            color: inherit;
            font-size: 1em;
        }
        #clock{
            color:midnightblue;
        }
        .display-4{
            color:darkslategrey;
            font-weight:bolder;
        }
</style>

<!-- Header Section -->

    <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/Employee/Profile">
            <i class="fas fa-user-alt me-1"></i> Profile
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Employee/ResetPassword">
                <i class="fas fa-key me-1"></i> Reset Password
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Login/Index">
                <i class="fas fa-sign-out-alt me-1"></i> Sign Out
            </a>
        </li>
  
    </ul>
    <div>
       <span id="clock"><i class="fas fa-clock"></i> --:--:--</span>
    </div>

<!-- Welcome Section -->
<div class="text-center">
    <h1 class="display-4">Welcome to Swift</h1>
    <p>Optimized to be efficient and effective</p>
</div>

<!-- Features Section -->
<div class="features">
    <div class="feature">
        <i class="fas fa-address-card fa-2x"></i>
        <h3>Manage Personal Information</h3>
        <p>Easily update personal details.</p>
    </div>
    <div class="feature">
        <i class="fas fa-user-alt fa-2x"></i>
        <h3>Reset password</h3>
        <p>Efficiently change passwords</p>
    </div>
</div>

<!-- Motivation Section -->
<div class="text-center">
    <h1 class="display-4">Some "fruit" for thought.</h1>
</div>
<section class="health-motivation">
    <div class="health-content">
        <h2>Stay Healthy, Stay Inspired 💪</h2>
        <p>Your health is your real wealth. Every small habit counts—whether it's a morning walk, drinking water, or taking a deep breath.</p>
        <ul class="health-tips">
            <li><i class="fas fa-apple-alt"></i> Eat fresh fruits and vegetables daily</li>
            <li><i class="fas fa-walking"></i> Walk at least 30 minutes a day</li>
            <li><i class="fas fa-water"></i> Stay hydrated — drink 6–8 glasses of water</li>
            <li><i class="fas fa-bed"></i> Prioritize 7–8 hours of sleep</li>
            <li><i class="fas fa-smile-beam"></i> Take breaks — your mental health matters</li>
        </ul>
        <blockquote>"Take care of your body. It’s the only place you have to live." – Jim Rohn</blockquote>
    </div>
</section>

<!-- Live Clock Script -->
<script>
    function updateClock() {
        const now = new Date();
        const timeString = now.toLocaleTimeString();
        document.getElementById('clock').innerHTML = '<i class="fas fa-clock"></i> ' + timeString;
    }

    setInterval(updateClock, 1000);
    updateClock(); // initialize immediately
</script>

<!-- Font Awesome (if not already included) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
