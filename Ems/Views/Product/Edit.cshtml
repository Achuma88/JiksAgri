@model JiksAgriFarm.Data.Models.Domain.UpdateStock

@{
    ViewData["Title"] = "Update Stock";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Update Product Stock</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductID" />

        <div class="form-group mb-3">
            <label for="NewStock" class="form-label">Add Stock Amount</label>
            <input asp-for="NewStock" class="form-control" type="number" min="1" required />
            <span asp-validation-for="NewStock" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100">Update Stock</button>

        <div class="mt-3">
            <a asp-action="DisplayAll" class="btn btn-secondary w-100">Back to Products</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
